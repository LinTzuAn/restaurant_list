<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn col-12 mb-2" style="background-color: #e95420; color: #ffffff
        ">Login</button>
        <a href="/auth/facebook" class="btn btn-info col-12" style="background-color: #1778f2; color: #ffffff">Facebook
          Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register" style="color: #e95420; text-decoration:none">Register</a>
      </p>
    </div>
  </div>
</div>
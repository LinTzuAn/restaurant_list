

<form action="/restaurants/{{restaurant._id}}/edit" method="POST">
  <a href="/">back</a>
  <button type="submit">Save</button>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <label for="name" class="text-secondary">
            <i class="fa-solid fa-pen"></i>
            名稱：
          </label>
          <input type="text" id="name" placeholder="name" name="name" value="{{restaurant.name}}">
        </p>

        <p class="mb-1">
          <label for="category" class="text-secondary">
            <i class="fa-solid fa-utensils"></i>
            類別：
          </label>
          <input type="text" id="category" placeholder="category" name="category" value="{{restaurant.category}}">   
        </p>

        <p class="mb-1">
          <label for="location" class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </label>
          <input type="text" id="location" placeholder="location" name="location" value="{{restaurant.location}}">        
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <label for="phone" class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </label>
          <input type="text" id="phone" placeholder="phone" name="phone" value="{{restaurant.phone}}">
        </p>

        <p class="mb-1">
          <label for="rating" class="text-secondary">
            
            評分
          </label>
          <input type="text" id="rating" placeholder="rating" name="rating" value="{{restaurant.rating}}">
        </p>

        <p class="mb-1">
          <label for="description" class="text-secondary">
            <i class="fa-solid fa-comments"></i>
            描述：
          </label>
        </p>  

        <p class="mb-5">
          <textarea class="" id="description" rows="3" name="description">{{restaurant.description}}
          </textarea>
        </p>
        
        <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
          style="max-width: 600px;">
      </div>
    
    </div>  
  </div>
</form>
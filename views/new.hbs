<form action="/restaurants" method="POST">
<a class="mx-2" href="/">back</a>
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">

        <div class=" mb-4">
          <label for="name" class="form-label text-secondary">
            <i class="fa-solid fa-pen"></i>
            名稱
          </label>
          <input type="text" class="form-control" id="name" placeholder="請輸入名稱" name="name" maxlength="50">
        </div>

        <div class=" mb-4">
          <label for="category" class="form-label text-secondary">
            <i class="fa-solid fa-utensils"></i>
            類別：
          </label>
          <input class="form-control" list="datalistOptions" id="category" placeholder="請選擇類別" name="category" maxlength="10">
          <datalist id="datalistOptions">
            <option value="義式料理">
            <option value="美式料理">
            <option value="日本料理">
            <option value="早午餐">
            <option value="咖啡廳">
          </datalist>
        </div>
        
          <label for="location" class="form-label text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </label>
        <div class="input-group mb-4">  
          <input type="text" class="form-control" id="location" placeholder="請輸入地址" name="location">
            <span class="input-group-text">
              <i class="fas fa-location-arrow pr-2 fa-xs"></i>  
            </span>  
          <input type="text" class="form-control" id="google_map" placeholder="google地圖" name="google_map" maxlength="30">
        </div>

        <div class="mb-4">
          <label for="phone" class=" form-label text-secondary">
            <i class="fa-solid fa-phone"></i>
            電話：
          </label>
          <input type="text" class="form-control" id="phone" placeholder="請輸入電話" name="phone" maxlength="12">
        </div>

        <div class="mb-4">
          <label for="rating" class="form-label text-secondary">
            <i class="fa-solid fa-star"></i>
            評分：
          </label>
          <input type="number" class="form-control" id="rating" placeholder="評分" name="rating" max="5">
        </div>

        <div class="mb-4">
          <label for="description" class="form-label text-secondary">
            <i class="fa-solid fa-comments"></i>
            簡介：
          </label>
          <textarea class="form-control" id="description" rows="3" name="description" maxlength="200">...</textarea>
        </div>

        <div class="mb-4">
          <label for="image" class="form-label text-secondary">
            圖片：
          </label>
          <input type="url" class="form-control" id="image" placeholder="請輸入圖片網址" name="image">
        </div>
    
      </div>
    </div>
  </div>
  <div class="mt-3 mb-5 d-flex justify-content-center align-items-center">
    <button class="btn-delete text-secondary" type="submit">Create</button>
  </div>
</form>